        <article id="article">
            <div class="row no-photo">
                <div class="col-sm-2 category center-block text-center hidden-print">
                    <a href="../cover_story/">
					<img class="category-circle-img" src="../_resources2015/img/category_circles/circle_the_archives.png" />
					<small>Archives:<br>Cover Story</small></a>
                </div>
                <header class="col-sm-10">
                    <h1>The Hamster Wheel</h1>
                    <h4 class="archive-deck">Why running as fast as we can is getting us nowhere</h4>
                </header>
            </div>
        
   
           
				<section class="row">
                
					<aside id="sharing" class="col-sm-2 text-center sticky hidden-print">
						<section id="story-info">

                        	<h2><a href="http://www.cjr.org/author/dean-starkman-2/">By Dean Starkman</a></h2>
                            
							<small>
                            
                            
                            <a href="../magazine/septemberoctober2010.php">
                            	 
                                 	September /<br> October 2010
                                 
                            </a>
                            
                            
                            </small>
							<small>3565 words</small>
						</section>
                        
                        <div class="sharing-buttons">
                            
